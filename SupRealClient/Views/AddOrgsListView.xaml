<mah:MetroWindow x:Class="SupRealClient.Views.AddOrgsListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupRealClient.Views"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Добавить организацию" Height="500" Width="600">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        
        <DataGrid 
            Name="Orgs" 
            Grid.Row="0" 
            Grid.ColumnSpan="2" 
            ItemsSource="{Binding Path=Organizations}" 
            SelectedItem="{Binding Path=CurrentOrganization, Mode=TwoWay}" 
            AutoGenerateColumns="False"/>
        
        <Button 
            Grid.Row="1" 
            Grid.Column="0" 
            Content="Ок" 
            Command="{Binding OkCommand}"/>
        
        <Button 
            Grid.Row="1" 
            Grid.Column="1" 
            Content="Отмена" 
            Command="{Binding CancelCommand}"/>

    </Grid>
</mah:MetroWindow>
