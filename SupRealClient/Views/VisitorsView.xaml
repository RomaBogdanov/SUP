<mah:MetroWindow x:Class="SupRealClient.Views.VisitorsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupRealClient.Views"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Посетители" Height="800" Width="700"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="1.8*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid
            Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Фамилия"
                Style="{StaticResource TextBLockStyle}"/>
            
            <TextBox
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource TextBoxStyle}"/>
            
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Text="Имя"
                Style="{StaticResource TextBLockStyle}"/>

            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource TextBoxStyle}"/>
            
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Text="Отчество"
                Style="{StaticResource TextBLockStyle}"/>

            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                Style="{StaticResource TextBoxStyle}"/>
        </Grid>
        
        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Организация"
                Style="{StaticResource TextBLockStyle}"/>

            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource TextBoxStyle}"/>
            
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Content="..."
                
                Style="{StaticResource VisitorsSquareButtonStyle}"/>
            
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Примечания"
                Style="{StaticResource TextBLockStyle}"/>

            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource TextBoxStyle}"/>

            <Button
                Grid.Row="1"
                Grid.Column="2"
                Content="..."
                Style="{StaticResource VisitorsSquareButtonStyle}"/>
        </Grid>
        
        <Grid
            Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid
                Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <CheckBox
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                <TextBlock 
                    Grid.Column="1"
                    Text="Вход запрещён"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            </Grid>

            <Grid
                Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <CheckBox
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                <TextBlock 
                    Grid.Column="1"
                    Text="Принимающее лицо"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            </Grid>

            <Grid
                Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <CheckBox
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                <TextBlock 
                    Grid.Column="1"
                    Text="Нет формуляра"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
            </Grid>
        </Grid>
        
        <Grid
            Grid.Row="3">
            <mah:MetroAnimatedTabControl
                Margin="5">
                <mah:MetroTabItem Header="Основная">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.3*"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="4*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="Контактные телефоны"
                            FontSize="15"
                            TextWrapping="Wrap"
                            Style="{StaticResource TextBLockStyle}"/>
                        
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource TextBoxStyle}"/>

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="Гражданство"
                            FontSize="15"
                            TextWrapping="Wrap"
                            Style="{StaticResource TextBLockStyle}"/>

                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource TextBoxStyle}"/>
                        
                        <Grid
                            Grid.Row="1"
                            Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                        
                            <Button
                                Grid.Column="0"
                                Height="25"
                                Width="25"
                                Margin="0"
                                Content="..."
                                Style="{StaticResource VisitorsSquareButtonStyle}"/>
                            
                            <Button
                                Grid.Column="1"
                                Height="25"
                                Width="25"
                                Margin="0"
                                Content="X"
                                Style="{StaticResource VisitorsSquareButtonStyle}"/>
                        </Grid>
                       
                        <Grid
                            Grid.Row="2"
                            Column="0"
                            ColumnSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.4*"/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock 
                                Grid.Row="0"
                                Grid.Column="0"
                                Text="Документ"
                                Style="{StaticResource TextBLockStyle}"/>

                            <TextBlock 
                                Grid.Row="1"
                                Grid.Column="0"
                                Text="Тип"
                                Style="{StaticResource TextBLockStyle}"/>

                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="Удостоверение личности"
                                TextWrapping="Wrap"
                                FontSize="15"
                                IsEnabled="False"
                                Margin="2"
                                Style="{StaticResource TextBoxStyle}"/>
                            
                            <Grid
                                Grid.Row="1"
                                Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                
                                <Button
                                    Grid.Column="0"
                                    Margin="0,20,5,15"
                                    Height="25"
                                    Width="25"
                                    Content="..."
                                    Style="{StaticResource VisitorsSquareButtonStyle}"/>

                                <Button
                                    Grid.Column="1"
                                    Margin="0,20,5,15"
                                    Height="25"
                                    Width="25"
                                    Content="X"
                                    Style="{StaticResource VisitorsSquareButtonStyle}"/>
                            </Grid>

                            <Grid
                                Grid.Row="1"
                                Grid.Column="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.6*"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Text="Серия"
                                    FontSize="15"
                                    Style="{StaticResource TextBLockStyle}"/>
                                
                                <TextBox
                                    Grid.Column="1"
                                    Style="{StaticResource TextBoxStyle}"/>
                            </Grid>

                            <Grid
                                Grid.Row="1"
                                Grid.Column="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.6*"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Text="№"
                                    FontSize="15"
                                    Style="{StaticResource TextBLockStyle}"/>

                                <TextBox
                                    Grid.Column="1"
                                    Style="{StaticResource TextBoxStyle}"/>
                            </Grid>

                            <TextBlock 
                                Grid.Row="2"
                                Grid.Column="0"
                                Text="Дата выдачи"
                                Style="{StaticResource TextBLockStyle}"/>

                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Grid.ColumnSpan="4"
                                Text=""
                                FontSize="15"
                                Style="{StaticResource TextBoxStyle}"/>
                            
                            <TextBlock 
                                Grid.Row="3"
                                Grid.Column="0"
                                Text="Кем выдан"
                                Style="{StaticResource TextBLockStyle}"/>

                            <TextBox
                                Grid.Row="3"
                                Grid.Column="1"
                                Grid.ColumnSpan="4"
                                Text=""
                                FontSize="15"
                                Style="{StaticResource TextBoxStyle}"/>
                            
                            <TextBlock 
                                Grid.Row="0"
                                Grid.Column="0"
                                Text="Документ"
                                Style="{StaticResource TextBLockStyle}"/>
                        </Grid>
                    </Grid>
                </mah:MetroTabItem>
                <mah:MetroTabItem Header="Пропуска">
                    <DataGrid AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Пропуск"/>
                            <DataGridTextColumn Header="Когда выдан"/>
                            <DataGridTextColumn Header="Срок по"/>
                            <DataGridTextColumn Header="Изменён"/>
                            <DataGridTextColumn Header="Оператор"/>
                            <DataGridTextColumn Header="№ заявки"/>
                            <DataGridTextColumn Header="Дополнительно"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </mah:MetroTabItem>
                <mah:MetroTabItem Header="Заявки">
                    <DataGrid AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№ заявки"/>
                            <DataGridTextColumn Header="Дата/время от"/>
                            <DataGridTextColumn Header="Дата/время до"/>
                            <DataGridTextColumn Header="Принимающее лицо"/>
                            <DataGridTextColumn Header="Тип заявки"/>
                            <DataGridTextColumn Header="Проходы"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </mah:MetroTabItem>
                <mah:MetroTabItem Header="Сотрудник">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock
                            Grid.Row="0" 
                            Grid.Column="0"
                            Text="Поздразделение:"
                            Style="{StaticResource TextBLockStyle}"/>
                        
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="2"
                            Style="{StaticResource TextBoxStyle}"/>

                        <Grid
                            Grid.Row="1"
                            Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            
                            <Button 
                                Grid.Column="0"
                                Content="..."
                                Margin="2"
                                Height="25"
                                Width="25"
                                Style="{StaticResource VisitorsSquareButtonStyle}"/>

                            <Button 
                                Grid.Column="1"
                                Content="X"
                                Margin="2"
                                Height="25"
                                Width="25"
                                Style="{StaticResource VisitorsSquareButtonStyle}"/>
                        </Grid>
                        
                        <TextBox
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="2"
                            Style="{StaticResource TextBoxStyle}"/>

                        <TextBlock
                            Grid.Row="3" 
                            Grid.Column="0"
                            Text="Должность:"
                            Style="{StaticResource TextBLockStyle}"/>

                        <TextBox
                            Grid.Row="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="2"
                            Style="{StaticResource TextBoxStyle}"/>
                        
                        <Grid
                            Grid.Row="5"
                                Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <CheckBox
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                            
                            <TextBlock 
                                Grid.Column="1"
                                Text="Право подписи заявок"
                                FontSize="15"
                                HorizontalAlignment="Left"
                                Style="{StaticResource TextBLockStyle}"/>
                        </Grid>

                        <Grid
                            Grid.Row="5"
                                Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <CheckBox
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>

                            <TextBlock 
                                Grid.Column="1"
                                Text="Право согласования заявок"
                                FontSize="15"
                                HorizontalAlignment="Left"
                                Style="{StaticResource TextBLockStyle}"/>
                        </Grid>
                        
                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            Text="Кабинет"
                            Style="{StaticResource TextBLockStyle}"/>
                        
                        <TextBox
                            Grid.Row="7"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="2"
                            Style="{StaticResource TextBoxStyle}"/>

                        <Grid
                            Grid.Row="7"
                            Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Button 
                                Grid.Column="0"
                                Content="..."
                                Margin="2"
                                Height="25"
                                Width="25"
                                Style="{StaticResource VisitorsSquareButtonStyle}"/>

                            <Button 
                                Grid.Column="1"
                                Content="X"
                                Margin="2"
                                Height="25"
                                Width="25"
                                Style="{StaticResource VisitorsSquareButtonStyle}"/>
                        </Grid>
                    </Grid>
                </mah:MetroTabItem>
            </mah:MetroAnimatedTabControl>
        </Grid>
    </Grid>
</mah:MetroWindow>
