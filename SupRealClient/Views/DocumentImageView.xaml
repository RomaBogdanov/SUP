		<KeyBinding Key="Escape" Command="{Binding Close}"/>
	</mah:MetroWindow.InputBindings>-->
	<Grid>
		<Image Source="{Binding DocumentImage, Mode=OneWay}" />

	</Grid>
</mah:MetroWindow>
