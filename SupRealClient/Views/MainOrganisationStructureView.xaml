<mah:MetroWindow x:Class="SupRealClient.Views.MainOrganisationStructureView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupRealClient.Views"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:viewModels="clr-namespace:SupRealClient.ViewModels"
        mc:Ignorable="d"
        Title="Структура главных организаций" Height="400" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <mah:MetroWindow.DataContext>
        <viewModels:MainOrganizationViewModel/>
    </mah:MetroWindow.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="66"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121"/>
            <ColumnDefinition Width="94"/>
            <ColumnDefinition Width="94"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="94"/>
        </Grid.ColumnDefinitions>
        
        <TreeView
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Margin="5"
            ItemsSource="{Binding Organizations}"
            Style="{DynamicResource MetroTreeView1}"
            SelectedItemChanged="TreeView_OnSelectedItemChanged">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Items}">
                    <TextBlock Text="{Binding Description}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Text="Поиск"
            Margin="5,0,5,0"/>
        
        <TextBox
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Margin="5"/>
        
        <Button
            Grid.Row="3"
            Grid.Column="0"
            Command="{Binding }"
            Style="{DynamicResource SquareButtonStyle1}" 
            Margin="5"
            IsEnabled="{Binding DepartmentEnabled}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Image
                    Grid.Row="0"
                    Source="../Resources/Добавить.ico"/>
                
                <TextBlock
                    Grid.Row="1"
                    Text="Департамент"/>
            </Grid>
        </Button>
        
        <Button
            Grid.Row="3"
            Grid.Column="1"
            Command="{Binding AddUnitCommand}"
            Style="{DynamicResource SquareButtonStyle1}" 
            Margin="5"
            IsEnabled="{Binding UnitEnabled}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Image
                    Grid.Row="0"
                    Source="../Resources/Добавить.ico"/>

                <TextBlock
                    Grid.Row="1"
                    Text="Отдел"/>
            </Grid>
        </Button>
        
        <Button
            Grid.Row="3"
            Grid.Column="2"
            Command="{Binding}"
            Style="{DynamicResource SquareButtonStyle1}" 
            Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Image
                    Grid.Row="0"
                    Source="../Resources/Редактировать.jpg"/>

                <TextBlock
                    Grid.Row="1"
                    Text="Правка"/>
            </Grid>
        </Button>
        
        <Button
            Grid.Row="3"
            Grid.Column="4"
            Command="{Binding}"
            Style="{DynamicResource SquareButtonStyle1}" 
            Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Image
                Grid.Row="0"></Image>

                <TextBlock
                    Grid.Row="1"
                    Text="Закрыть"/>
            </Grid>
        </Button>
    </Grid>
</mah:MetroWindow>
